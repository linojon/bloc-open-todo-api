#!/usr/bin/env ruby
require 'thor'
require 'restclient'
require 'json'
require 'debugger'

# edit this for you
TODO_AUTHFILE = 'todo.auth'
TODO_URL = 'localhost:3000'

class Todo < Thor

  desc "hello NAME", "say hello to NAME"
  def hello(name)
    puts "Hello #{name}"
  end

  desc "authenticate", "authenticate username, password"
  def authenticate(username, password)
    `echo "#{username}:#{password}" > #{TODO_AUTHFILE}`
    response = get 'users'
  end

  desc "users", "list users"
  def users
    users = get 'users'
    users['users'].each {|user| puts "#{user['id']}: #{user['username']}" }
  end

  desc "create_user NAME PW", "create new user"
  def create_user(username, password)
    user = post 'users', username: username, password: password
  end

  #----
end

def username_pw
  @username_pw ||= File.read(TODO_AUTHFILE).strip
end

def get(api_path)
  response = RestClient.get "http://#{username_pw}@#{TODO_URL}/api/#{api_path}", {:accept => :json}
  JSON.parse response
end

def post(api_path, params=[])
  response = RestClient.post "http://#{username_pw}@#{TODO_URL}/api/#{api_path}", params.to_json, content_type: :json, accept: :json
  JSON.parse response
end

def pp(json)
  puts json.to_json
  puts JSON.pretty_generate(JSON.parse json)
end

Todo.start(ARGV)
